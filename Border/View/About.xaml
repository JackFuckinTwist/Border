<Window x:Class="Border.View.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:Properties="clr-namespace:Border.Properties"
        Title="{x:Static Properties:Strings.About_Title}" Height="200" Width="400">
    <Grid>
        <TextBlock TextWrapping="Wrap" Padding="4,4,4,4">
            <Run Text="{x:Static Properties:Strings.About_Default_1}"/>
            <Hyperlink NavigateUri="https://bit.ly/2uVcfqj" RequestNavigate="Hyperlink_RequestNavigate">abductedPlatypus</Hyperlink> 
            <Run Text="{x:Static Properties:Strings.About_Default_2}"/> 
            <Hyperlink NavigateUri="http://bit.ly/2GZVX4v" RequestNavigate="Hyperlink_RequestNavigate">Github</Hyperlink>
            <Run Text="{x:Static Properties:Strings.About_Default_3}"/>

            <Run Text="{x:Static Properties:Strings.About_Translation}"/>
            <LineBreak/>
            <LineBreak/>
            <Run FontStyle="Italic" FontWeight="UltraLight" Text="{x:Static Properties:Strings.About_Disclaimer}"/>
        </TextBlock>
    </Grid>
</Window>
